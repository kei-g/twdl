{
  "cSpell.allowCompoundWords": true,
  "cSpell.autoFormatConfigFile": true,
  "cSpell.caseSensitive": false,
  "cSpell.checkOnlyEnabledFileTypes": true,
  "cSpell.enabled": true,
  "cSpell.words": [
    "asar",
    "bento",
    "favorited",
    "magick",
    "maximizable",
    "outfile",
    "rcedit",
    "tada",
    "testid",
    "twdl",
    "twimg",
    "webp",
  ],
  "files.associations": {
    "**/LICENSE": "plaintext",
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
  },
  "html.format.wrapLineLength": 0,
  "markdownlint.config": {
    "MD009": false,
    "MD034": false,
  },
  "codemetrics.nodeconfiguration.BreakStatement": 0,
  "codemetrics.nodeconfiguration.CaseClause": 0,
  "codemetrics.nodeconfiguration.ContinueStatement": 0,
  "typescript.check.npmIsInstalled": true,
  "typescript.format.indentSwitchCase": true,
  "typescript.format.semicolons": "remove",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifierEnding": "auto",
  "typescript.preferences.quoteStyle": "single",
}
